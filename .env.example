# DocEater Configuration
# Copy this file to .env and modify as needed

# Database settings
DOCEATER_DATABASE_URL=postgresql://localhost:5432/doceater

# File watching settings
DOCEATER_WATCH_FOLDER=~/Downloads
DOCEATER_WATCH_RECURSIVE=true

# File processing settings
DOCEATER_MAX_FILE_SIZE_MB=100
DOCEATER_SUPPORTED_EXTENSIONS=.pdf
DOCEATER_EXCLUDE_PATTERNS=.*,~*,*.tmp,*.temp

# Docling settings
DOCEATER_DOCLING_ENRICH_FORMULA=true

# Image storage settings
DOCEATER_IMAGES_ENABLED=true
DOCEATER_IMAGES_BASE_PATH=~/doceater_data/images
DOCEATER_IMAGES_MAX_SIZE_MB=50
DOCEATER_IMAGES_ALLOWED_FORMATS=PNG,JPEG,WEBP
DOCEATER_IMAGES_COMPRESSION_QUALITY=85
DOCEATER_IMAGES_ORGANIZE_BY_DATE=true
DOCEATER_IMAGES_CLEANUP_FAILED=true
DOCEATER_IMAGES_RETENTION_DAYS=365

# Processing settings
DOCEATER_MAX_CONCURRENT_FILES=3
DOCEATER_PROCESSING_DELAY_SECONDS=1.0

# Logging settings
DOCEATER_LOG_LEVEL=INFO
# DOCEATER_LOG_FILE=/var/log/doceater.log

# Service settings
DOCEATER_SERVICE_NAME=doceater
# DOCEATER_PID_FILE=/var/run/doceater.pid
